# No-IP Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# No-IP Credentials
NOIP_USERNAME=your-noip-username
NOIP_PASSWORD=your-noip-password
NOIP_HOSTNAME=your-hostname.ddns.net

# IP Configuration
# USE_PUBLIC_IP: true = use public WAN IP, false = use local LAN IP
USE_PUBLIC_IP=true
# If USE_PUBLIC_IP=false, specify network adapters (comma-separated)
NETWORK_ADAPTERS=Wi-Fi,Ethernet

# Logging Configuration
LOG_PATH=D:\media-server\apps\DUC\logs
MAX_LOG_SIZE_MB=10

# Optional: Email Alerts (leave empty to disable)
SMTP_SERVER=
SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=
EMAIL_PASSWORD=

# Optional: Notification Settings
SHOW_NOTIFICATIONS=false